@using System.Web.Optimization
@{
    Layout = null;
}

@helper SelectedTabClass(string tabName)
{
    if (tabName == ViewBag.SelectedTab) {
        @: active
    }
    else {
        //@: active 
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SimpleBlog Admin</title>

    @Styles.Render("~/admin/styles")
</head>
<body>
    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTabClass("posts")">@Html.ActionLink("Posts", "Index", "Posts", new { area = "admin" }, new object())</li>
            <li class="@SelectedTabClass("users")">@Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new object())</li>
            <li class="pull-right">@Html.RouteLink("Back to Website", "Home")</li>
        </ul>
    </div>

    @RenderBody()

    <footer>
        &copy; @DateTime.Now.Year - Me
    </footer>

    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>
